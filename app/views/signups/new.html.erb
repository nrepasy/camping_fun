<h1> Signup For activities </h1>

    <h3>Form For<h3>
    
    <%= form_for @signup do |f| %>
        <%= f.label :camper_id %>
        <%= f.collection_select :camper_id, Camper.all, :id, :name %>
        <%= f.label :activity_id %>
        <%= f.collection_select :activity_id, Activity.all, :id, :name %>
        <%= f.label :time %>
        <%= f.number_field :time%>
        <%= f.submit "Add to Signup"%>
    <% end %>
  